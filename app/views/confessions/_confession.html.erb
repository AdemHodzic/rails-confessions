<div class="card confession" data-id="<%= confession.id%>">
  <div class="card-content">
    <div class="columns">
      <div class="column is-three-quarters">
        <h1 class="title is-3">
          <%= confession.title%>
          <% if confession.edited%>
            <span class="tag is-warning">edited</span>
          <% end %>
        </h1>
        <div class="content"><%= confession.text%></div>
      </div>
      <div class="column">
        <%= render partial: "confession-controls", locals: {confession: confession}%>
      </div>
    </div>
  </div>
</div>
<br>