<%= form_with(model: confession, local: true) do |form| %>
  <% if confession.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(confession.errors.count, "error") %> prohibited this confession from being saved:</h2>

      <ul>
      <% confession.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, class: "label"%>
    <div class="control">
      <%= form.text_field :title, class: "input", placeholder: "Confession Title" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :text, class: "label" %>
    <div class="control">
      <%= form.text_field :text, class: "input", placeholder: "Get it off yout chest honey" %>
    </div>
  </div>

  <div class="field">
    <div class="actions control">
      <%= form.submit :Confess, class:"button is-primary"%>
    </div>
  </div>
<% end %>
