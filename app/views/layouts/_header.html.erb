<header class="header">
  <div class="container">
    <nav class="level">
      <div class="level-left">
        <h1><%= link_to("Confess", root_path, :class => "has-text-dark") %></h1>
      </div>
      <div class="level-right">
        <p class="level-item small-padding is-hidden-touch">
          <% if  current_user %>
          <%= link_to 'New Confession', new_confession_path, class: "button is-success small-margin-gap" %>
          <%= link_to("My Confession", "/me/confessions", :class => "button small-margin-sides is-link ") %>
          <%= link_to("Sign Out", destroy_user_session_path, :method => :delete, :class => "button small-margin-sides is-primary ") %>
          <% else %>
          <%= link_to("Sign Up", new_user_registration_path, :class => "button small-margin-sides is-primary") %>
          <%= link_to("Sign In", new_user_session_path, :class => "button small-margin-sides is-info ") %>
          <% end %>
        </p>
        <button class="button is-rounded is-large is-hidden-desktop" id="hamburgerMenu">
          <span class="icon is-small">
            <i class="fas fa-bars"></i>
          </span>
        </button>
      </div>
    </nav>
  </div>
</header>


